pipeline {
    agent any

stages {
    stage('checkout') {
  steps {
    checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/saimanohar9966/jenkins_terraaform.gi']]])
  }
}

stage ("terraform init") {
            steps {
                sh ('terraform init') 
            }
        }
stage ("terraform plan") {
            steps {
                sh ('terraform plan') 
            }
        }
stage ("terraform apply") {
            steps {
                sh ('terraform apply --auto-approve') 
            }
        }
}
}