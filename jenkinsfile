pipeline {
    agent any

stages {
    stage('checkout') {
  steps {
   git credentialsId: '78514f62-6373-4002-9be9-201750d3ecbd', url: 'https://github.com/saimanohar9966/jenkins_terraaform.git'
  }
}

stage ("terraform init") {
            steps {
                sh ('terraform init') 
            }
        }
stage ("terraform plan") {
            steps {
                sh ('terraform plan') 
            }
        }
stage ("terraform apply") {
            steps {
                sh ('terraform apply --auto-approve') 
            }
        }
}
}